<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>

<AnchorPane fx:id="ancDataBuku" prefHeight="400.0" prefWidth="600.0" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.BukuController">
   <children>
   <Label layoutX="24.0" layoutY="24.0" text="Judul Buku" />
      <TextField fx:id="txtJudulBuku" layoutX="100.0" layoutY="20.0" prefWidth="200.0" />
      
      <Label layoutX="24.0" layoutY="60.0" text="Penulis" />
      <TextField fx:id="txtPenulis" layoutX="100.0" layoutY="56.0" prefWidth="200.0" />
      
      <Label layoutX="24.0" layoutY="96.0" text="Harga" />
      <TextField fx:id="txtHarga" layoutX="100.0" layoutY="92.0" prefWidth="200.0" />
      
      <Label layoutX="24.0" layoutY="132.0" text="Stok" />
      <TextField fx:id="txtStok" layoutX="100.0" layoutY="128.0" prefWidth="100.0" />

      <Button fx:id="btnTambahBuku" layoutX="320.0" layoutY="20.0" mnemonicParsing="false" onAction="#aksiTambahBuku" text="Add" />
      <Button fx:id="btnEditBuku" layoutX="370.0" layoutY="20.0" mnemonicParsing="false" onAction="#aksiEditBuku" text="Edit" />
      <Button fx:id="btnHapusBuku" layoutX="420.0" layoutY="20.0" mnemonicParsing="false" onAction="#aksiHapusBuku" text="Delete" />

      <TableView fx:id="tabelBuku" layoutX="20.0" layoutY="170.0" prefHeight="200.0" prefWidth="560.0"
      			AnchorPane.bottomAnchor="0" 
                 AnchorPane.leftAnchor="0" 
                 AnchorPane.rightAnchor="0" 
                 AnchorPane.topAnchor="170.0">
        <columns>
          <TableColumn fx:id="kolIDBuku" prefWidth="50.0" text="ID" />
          <TableColumn fx:id="kolJudulBuku" prefWidth="150.0" text="Judul" />
          <TableColumn fx:id="kolPenulis" prefWidth="120.0" text="Penulis" />
          <TableColumn fx:id="kolHarga" prefWidth="100.0" text="Harga" />
          <TableColumn fx:id="kolStok" prefWidth="75.0" text="Stok" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
      </TableView>
      </children>
</AnchorPane>