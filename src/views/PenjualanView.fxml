<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>


<AnchorPane fx:id="ancDataPenjualan" prefHeight="400.0" prefWidth="600.0" 
            xmlns="http://javafx.com/javafx/21" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.PenjualanController">
   <children>
   <Label layoutX="24.0" layoutY="24.0" text="Pelanggan" />
      <ComboBox fx:id="cbNamaPelanggan" layoutX="100.0" layoutY="20.0" prefWidth="200.0" promptText="-- Pilih Pelanggan --" />

      <Label layoutX="24.0" layoutY="60.0" text="Buku" />
      <ComboBox fx:id="cbJudulBuku" layoutX="100.0" layoutY="56.0" prefWidth="200.0" promptText="-- Pilih Buku --" />

      <Label layoutX="24.0" layoutY="96.0" text="Jumlah" />
      <TextField fx:id="txtJumlah" layoutX="100.0" layoutY="92.0" prefWidth="100.0" promptText="0" />

      <Button fx:id="btnTambahPenjualan" layoutX="320.0" layoutY="20.0" mnemonicParsing="false" onAction="#aksiTambahPenjualan" prefHeight="25.0" prefWidth="120.0" text="Add"/>
      
      <Button fx:id="btnHapusPenjualan" layoutX="320.0" layoutY="56.0" mnemonicParsing="false" onAction="#aksiHapusPenjualan" prefHeight="25.0" prefWidth="120.0" text="Delete" />

      <TableView fx:id="tabelPenjualan" layoutX="20.0" layoutY="140.0" prefHeight="240.0" prefWidth="560.0"
      AnchorPane.bottomAnchor="0" 
                 AnchorPane.leftAnchor="0" 
                 AnchorPane.rightAnchor="0" 
                 AnchorPane.topAnchor="170.0">
        <columns>
          <TableColumn fx:id="kolIDPenjualan" prefWidth="40.0" text="ID Penjualan" />
          <TableColumn fx:id="kolNamaPenj" prefWidth="120.0" text="ID Pelanggan" />
          <TableColumn fx:id="kolJudulPenj" prefWidth="150.0" text="ID Buku" />
          <TableColumn fx:id="kolJumlahPenj" prefWidth="60.0" text="Qty" />
          <TableColumn fx:id="kolTotalPenj" prefWidth="100.0" text="Total (Rp)" />
          <TableColumn fx:id="kolTanggalPenj" prefWidth="80.0" text="Tanggal" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
      </TableView>
      </children>
</AnchorPane>